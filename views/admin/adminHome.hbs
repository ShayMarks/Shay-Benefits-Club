{{> toolbars/adminToolBar }}

<h2>Add Product</h2>
<form id="addProductForm">
  <div class="form-group">
    <input type="text" id="name" placeholder="Name" required>
  </div>
  <div class="form-group">
    <textarea id="description" placeholder="Description" required></textarea>
  </div>
  <div class="form-group">
    <input type="number" id="price" placeholder="Price" required min="0">
  </div>
  <div class="form-group">
    <select id="categoryName" required></select>
  </div>
  <div class="form-group">
    <input type="number" id="stock" placeholder="Stock" required min="0">
  </div>
  <div class="form-group">
    <input type="text" id="image" placeholder="Image URL" required>
  </div>
  <button type="submit">Add Product</button>
</form>

{{> adminFooter }}


<script src="/js/adminScript/addProduct.js"></script>
